{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["@types", "./node_modules/@types"],
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "@types/express/custom.d.ts"],
  "exclude": ["node_modules"]
}
